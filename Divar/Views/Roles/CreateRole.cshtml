@model CreateRoleViewModel

<h2>Edit Role</h2>

<form asp-action="EditRole" method="post">
    <input type="hidden" asp-for="RoleName" />

    <div>
        <label asp-for="RoleName"></label>
        <input asp-for="RoleName" />
        <span asp-validation-for="RoleName"></span>
    </div>

    <div>
        <h3>Select Permissions</h3>
        @foreach (AccessLevel permission in Enum.GetValues(typeof(AccessLevel)))
        {
            <div>
                <input type="checkbox" name="SelectedPermissions" value="@permission" @(Model.SelectedPermissions.Contains(permission.ToString()) ? "checked" : "") />
                <label>@permission</label>
            </div>
        }
    </div>

    <button type="submit">Update Role</button>
</form>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}
