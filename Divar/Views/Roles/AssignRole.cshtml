@model AssignRoleViewModel

<h2>اختصاص نقش به کاربر</h2>

<form asp-action="AssignRole" method="post">
    <div class="form-group">
        <label for="UserId">انتخاب کاربر:</label>
        <select asp-for="UserId" asp-items="Model.Users" class="form-control">
            <option value="">-- کاربر را انتخاب کنید --</option>
        </select>
    </div>

    <div class="form-group">
        <label for="SelectedRoles">انتخاب نقش:</label>
        <select asp-for="SelectedRoles" asp-items="@(new SelectList(Model.AvailableRoles))" class="form-control" multiple>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">اعمال</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@error.ErrorMessage</div>
        }
    </div>
}